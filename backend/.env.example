# API settings
PROJECT_NAME='Data Room API'
API_V1_STR=/api/v1

# Authentication
SECRET_KEY=SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# AWS Settings
AWS_REGION=us-east-1
# Add these for local development with AWS credentials
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# For local DynamoDB (e.g., DynamoDB Local or localstack)
# AWS_ENDPOINT_URL=http://localhost:8000

# DynamoDB Tables
DYNAMODB_USERS_TABLE=DataRoom-Users-dev
DYNAMODB_DOCUMENTS_TABLE=DataRoom-Documents-dev
DYNAMODB_FOLDERS_TABLE=DataRoom-Folders-dev
DYNAMODB_INTEGRATIONS_TABLE=DataRoom-Integrations-dev
DYNAMODB_DOCUMENT_SHARES_TABLE=DataRoom-DocumentShares-dev
DYNAMODB_FOLDER_SHARES_TABLE=DataRoom-FolderShares-dev
DYNAMODB_DOCUMENT_VERSIONS_TABLE=DataRoom-DocumentVersions-dev

# S3 Bucket
S3_BUCKET=data-room-dev-123456789012

# File storage
UPLOAD_FOLDER=uploads
# 16MB
MAX_CONTENT_LENGTH=16777216

# Google Drive Integration
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/integrations/google/callback

# Get your Google API credentials from https://console.developers.google.com
# Instructions:
# 1. Create a project in Google Developer Console
# 2. Enable the Google Drive API
# 3. Create OAuth 2.0 credentials (Web application type)
# 4. Add the redirect URI (must match GOOGLE_REDIRECT_URI)